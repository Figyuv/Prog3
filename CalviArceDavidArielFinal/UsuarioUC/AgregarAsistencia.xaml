<Window x:Class="CalviArceDavidArielFinal.UsuarioUC.AgregarAsistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalviArceDavidArielFinal.UsuarioUC"
        mc:Ignorable="d"
        Height="350" Width="600" WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" AllowsTransparency="True"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" Loaded="Window_Loaded">
    <Grid>
        <materialDesign:Card Margin="10" UniformCornerRadius="15">
            <Grid>
                <Grid Grid.Column="0" Background="#F6F5F8">
                    <ListView x:Name="dgvConferencias" Height="250" VerticalAlignment="Top"/>
                    <Button x:Name="btnAsistencia" VerticalAlignment="Bottom" Content="Registrar asistencia" Margin="10" Width="200" Click="btnAsistencia_Click"/>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>